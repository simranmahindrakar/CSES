#include <iostream>
#include <bits/stdc++.h>
using namespace std;
int main()
{
  int mod = 1000000007;
	int n;
	cin>>n;
	if(n<0) { 
		cout<<0;
	} 
	vector<int> dp(n+1,0);
	dp[0] = 1;
  //******************dp[i] = dp[i-1] + dp[i-2] + dp[i-3] + .... dp[i-6]***********************//
	for(int i=1; i<=n; i++)
	{
		for(int j=1; j<=6 && (i-j)>=0; j++)
		{
			(dp[i] += dp[i-j]) %= mod;  //mod is questions requirement//
		}
	}
	cout<<dp[n];
}
